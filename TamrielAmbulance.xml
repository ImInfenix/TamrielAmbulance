<GuiXml>
  <Controls>
    <TopLevelControl name="GUI_TamrielAmbulance" mouseEnabled="true" movable="true" clampedToScreen="true">
      <Dimensions x="128" y="50" />
      <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER"/>

      <OnMoveStop>
        TamrielAmbulance.SaveWindowPosition()
      </OnMoveStop>

      <Controls>
        <Texture name="$(parent)Background" color="000000" alpha="0.3">
          <Dimensions x="128" y="50" />
          <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER"/>
        </Texture>

        <Label name="$(parent)Title" width="80" height="25" inheritAlpha="true" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="LEFT" text="Resurrected">
          <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" />
        </Label>
        
        <Label name="$(parent)Counter" width="80" height="25" fontSize="12" inheritAlpha="true" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="ambulance_counter">
          <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" offsetY="25"/>
        </Label>
        
        <Label name="$(parent)PlayersList" width="80" height="25" fontSize="12" inheritAlpha="true" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="LEFT" text="patapouf">
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetY="30" offsetX="10"/>
        </Label>
        
        <Label name="$(parent)CountersList" width="80" height="25" fontSize="12" inheritAlpha="true" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="RIGHT" text="patapouf">
          <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetY="30" offsetX="-10"/>
        </Label>
      </Controls>
    </TopLevelControl>
  </Controls>
</GuiXml>
